{
   "compilerOptions": {
      "outDir": "./build",
      "target": "es2018",
      "lib": [
         "es7",
         "dom",
         "esnext.asynciterable",
         "es2020"
      ],
      "typeRoots": [
         "./node_modules/@types"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": false,
      "declaration": false,
      "allowSyntheticDefaultImports": true
   },
   "include": [
      "./src/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "./public",
      "dist",
      "test"
   ]
}
