<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">example</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5434/postgres</property>
        <property name="connection_pool_size">1</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <mapping class="project.grp3.emergency.core.database.entities.TruckTypeEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.SensorEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.ExhaustLevelEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.BarrackEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.SdisEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.ResourceEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.LogEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.FireTruckEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.FiremanEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.FireTypeEntity"/>
        <mapping class="project.grp3.emergency.core.database.entities.FireEntity"/>
    </session-factory>
</hibernate-configuration>